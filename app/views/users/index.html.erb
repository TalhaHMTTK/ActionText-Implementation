
<table class="table table-hover">
    <thead>
    <tr>
      <th scope="col">UserId</th>
      <th scope="col">Name</th>
      <th scope="col">Notes</th>
      <th scope="col">Buttons</th>
    </tr>
  </thead>
<% @users.each do |user| %>
    <tbody>
        <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.name %></td>
        <td><%= user.notes%></td>
        <td><%= link_to 'Delete', user_path(user), method: :delete, data: { "turbo-method": :delete }, class: "btn btn-danger ml-3" %> | <%= link_to 'Edit', edit_user_path(user), class: "btn btn-danger ml-3" %></td>

        </tr>
    </tbody>  
<% end %>

</table>